<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explorar">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="131dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_siguiendo3"
            android:layout_width="28dp"
            android:layout_height="111dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/siguiendo" />

        <ImageButton
            android:id="@+id/btn_descubrir3"
            android:layout_width="36dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/descubrir" />

        <ImageButton
            android:id="@+id/btn_explorar3"
            android:layout_width="20dp"
            android:layout_height="111dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/explorar" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_perfil2"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginTop="84dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/tv_explorar"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif-black"
        android:text="Explorar"
        android:textSize="34sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_perfil2"
        tools:layout_editor_absoluteX="25dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_explorar"
        android:layout_width="346dp"
        android:layout_height="445dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_explorar"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>